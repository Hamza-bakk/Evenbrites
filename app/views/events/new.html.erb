<%= form_with(model: @event, url: events_path, class: "form mt-4") do |form| %>
    <div class="mb-3">
      <%= form.label :title, "Titre" %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :start_date, "Date de début" %>
      <%= form.datetime_select :start_date, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :duration, "Durée (en minutes)" %>
      <%= form.number_field :duration, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :price, "Prix" %>
      <%= form.number_field :price, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :location, "Lieu" %>
      <%= form.text_field :location, class: "form-control" %>
    </div>
    <%= form.submit "Créer l'événement", class: "btn btn-primary" %>
  <% end %>
</div>